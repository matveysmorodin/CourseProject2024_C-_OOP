<Window x:Class="CourseProject.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Profile" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="lblID" Width="200" Height="30" Margin="5"/>
            <TextBlock Name="lblName" Width="200" Height="30" Margin="5"/>
            <TextBlock Name="lblBalance" Width="200" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
