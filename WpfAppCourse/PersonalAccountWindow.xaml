<Window x:Class="CourseProject.PersonalAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Personal Account" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Name="txtLogin" Width="200" Height="30" Margin="5" Style="{StaticResource WatermarkTextBox}" Tag="Логин"/>
            <TextBox Name="txtPassword" Width="200" Height="30" Margin="5" Style="{StaticResource WatermarkTextBox}" Tag="Пароль"/>
            <Button Content="Войти" Click="btnLogin_Click" Width="200" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
